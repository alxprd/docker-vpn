#!/bin/sh

. /root/files/commons.sh

echo_template() {
	echo "Use: setup-client <client_name> <server_name> <server_address> [-compact]"
}

client_name=$1
server_name=$2
server_address=$3

if [ -z "${client_name}" ]; then
	echo "Asign a valid client name!"
	echo_template
	exit 0
fi

if [ -z "${server_name}" ]; then
	echo "Asign a valid server name!"
	echo_template
	exit 0
fi

if [ -z "${server_address}" ]; then
	echo "Asign a valid server address!"
	echo_template
	exit 0
fi

if [ "$4" = "-compact" ]; then
	compact=true
else
	compact=false
fi

name=$client_name
type_keys=client
. /root/files/vars.sh

import_ca_package

if [ ! -f "$secrets_dir/$secret_name" ]; then
	echo "Server secret for '$server_name' doesn't exist in CA!"
	exit 0
fi

if [ -f "$ca_keys_dir/${client_name}.key" ]; then
	echo "Client crt/key for '$client_name' exist in CA"
else
	echo "Client crt/key for '$client_name' doesn't exist in CA"
	create_client_keys
	update_ca_package
fi

export_keys
export_server_secret
export_client_conf
set_remote

if [ "$compact" = true ]; then
	set_client_keys_compact
	output_client_conf_compact
else
	set_client_keys
	create_package
fi
